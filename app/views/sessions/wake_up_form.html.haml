%h1 Activate your account, #{@form.model.email}!

= form_for @form, url: session_wake_up_path(id: params[:id]), method: :post do |f|
  .row
    = f.password_field :password, placeholder: 'Password'
  .row
    = f.password_field :confirm_password, placeholder: 'Password, again'
  .row
    = f.submit 'Engage!', class: :expand

    = #f.object.confirmation_token

  = f.hidden_field :confirmation_token, value: params[:confirmation_token] # @operation.confirmation_token # FIXME: separate form?!

  = @form.errors.to_s
